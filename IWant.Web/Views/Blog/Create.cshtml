@model IWant.Web.Models.BlogViewModel

@{
    ViewData["Title"] = "Create Blog";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
@if(User.IsInRole("Member")){
    <style>
        .body{
            background-color: #FEDA15;
        }
    </style>
}
<style>
    .upload-box {
        border: 2px dashed #28a745;
        border-radius: 8px;
        height: 220px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: mediumpurple;
        transition: background-color 0.2s ease;
    }

    .custom-error {
        display: block;
        font-size: 14px;
        margin-top: 5px;
    }


    .btn {
        background-color: mediumpurple;
    }

    .upload-box i {
        font-size: 2rem;
    }

    .upload-box p {
        margin: 8px 0 0;
    }

    .card-body {
        padding-bottom: 30px;
    }

</style>

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header text-center" style="background-color: mediumpurple;">
            <h4 class="text-white m-0">
                @(User.IsInRole("Admin") ? "CREATE NEW BLOG" : "SUBMIT NEW BLOG")
            </h4>
        </div>
        <div class="card-body p-4 pb-3">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div id="uploadBox" class="upload-box">
                            <div id="uploadPlaceholder" class="text-center">
                                <i class="fas fa-upload"></i>
                                <p>Drag files to upload</p>
                            </div>
                            <img id="imgPreview" src="#" alt="Image Preview" style="max-height: 100%; max-width: 100%; display: none;" />
                        </div>
                        <div class="mt-3 d-grid text-center">
                            <span asp-validation-for="Image" class="text-danger"></span>
                            <button type="button" class="btn btn-success" id="chooseFileButton">Choose File</button>
                            <input asp-for="Image" id="fileInput" type="file" style="display: none;" required/>
                            <input asp-for="ImageUrl" hidden />
                        </div>
                        <div class="cited-img">
                            <label asp-for="CitedImage" for="Title" class="form-label fw-bold"></label>
                            <input type="text" asp-for="CitedImage" class="form-control" placeholder="Enter Cited Image"  />
                            <span asp-validation-for="CitedImage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="Title" class="form-label fw-bold">Blog Title</label>
                            <input type="text" asp-for="Title" class="form-control" placeholder="Enter Blog Title"  />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3 content">
                            <label for="Content" class="form-label fw-bold">Content</label>
                            <textarea asp-for="Content" class="form-control summernote" placeholder="Type something..." ></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <input type="hidden" asp-for="Status" class="form-control" value="true" />
                        }
                        else
                        {
                            <input type="hidden" asp-for="Status" class="form-control" value="" />
                        }
                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">
                                @(User.IsInRole("Admin") ? "Create" : "Submit")
                            </button>
                        </div>
                    </div>
                </div>
            </form>

            <div class="mt-4 position-relative" style="height: 100px; overflow: hidden;">
                <img id="scrolling-logo" src="~/images/logo-1.png" alt="Logo" style="position: absolute; top: 50%; transform: translateY(-50%); left: 90%; height: 80px;" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Summernote -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.js"></script>

    <script>
        $(document).ready(function () {
            const allowedExtensions = ['png', 'jpg', 'jpeg', 'gif'];
            const maxSize = 5 * 1024 * 1024; // 5MB

            // Khởi tạo Summernote
            $('.summernote').summernote({
                height: 300,
                placeholder: 'Write content here...',
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['view', ['codeview']]
                ],
                callbacks: {
                    onChange: function (contents) {
                        $("textarea.summernote").val(contents).trigger('change'); // Cập nhật giá trị cho ASP.NET validation
                    }
                }
            });

            // Mở hộp thoại chọn file khi bấm nút
            $('#chooseFileButton').click(function () {
                $('#fileInput').click();
            });

            // Xử lý khi chọn ảnh
            $('#fileInput').change(function () {
                const file = this.files[0];
                const errorSpan = $("#fileInput").closest('.mt-3').find('.text-danger');

                if (!file) {
                    errorSpan.text("Image is required!").show();
                    return;
                }

                const fileName = file.name.toLowerCase();
                const fileSize = file.size;
                const fileExtension = fileName.split('.').pop();

                if (!allowedExtensions.includes(fileExtension)) {
                    errorSpan.text("Invalid file format! Only PNG, JPG, JPEG, GIF are allowed.").show();
                    this.value = ''; // Xóa file input
                    return;
                }

                if (fileSize > maxSize) {
                    errorSpan.text("File size must be less than 5MB!").show();
                    this.value = ''; // Xóa file input
                    return;
                }

                errorSpan.text(""); // Xóa lỗi nếu hợp lệ

                const reader = new FileReader();
                reader.onload = function (e) {
                    $('#uploadPlaceholder').hide();
                    $('#imgPreview').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(file);
            });

            // Bắt sự kiện khi form submit
            $("form").on("submit", function (e) {
                let isValid = true;

                // Kiểm tra nội dung Summernote
                let content = $('.summernote').summernote('code').trim();
                if (content === "" || content === "<p><br></p>" || content === "<br>") {
                    e.preventDefault();
                    $(".summernote").val("");
                    $(".summernote").closest('.mb-3').find('.text-danger').text("Content is required!").show();
                    isValid = false;
                }

                // Kiểm tra hình ảnh có được chọn không
                if ($('#fileInput').get(0).files.length === 0) {
                    e.preventDefault();
                    $("#fileInput").closest('.mt-3').find('.text-danger').text("Image is required!").show();
                    isValid = false;
                }

                return isValid; // Chỉ submit nếu hợp lệ
            });

        });
    </script>
}

