@model IWant.Web.Models.BlogViewModel

@{
    ViewData["Title"] = "Delete Blog";
}

<h1>Delete Blog</h1>

<p>Are you sure you want to delete this blog?</p>

<div>
    <h4>Blog Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Blog Image" style="max-width: 100%; max-height: 200px;" />
        </dd>

        <dt class="col-sm-2">Local Path</dt>
        <dd class="col-sm-10">@Model.ImageLocalPath</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
