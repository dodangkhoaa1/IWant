@model IEnumerable<IWant.Web.Models.BlogViewModel>

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h2>Blogs List</h2>
        </div>
        <div class="card-body p-4">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Status</th>
                        <th>Image</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td>@blog.Title</td>
                            <td>@Html.Raw(blog.Content)</td>
                            <td>@blog.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@blog.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge @(blog.Status ? "bg-success" : "bg-danger")">
                                    @(blog.Status ? "Show" : "Hide")
                                </span>
                            </td>
                            <td>
                                <img src="@blog.ImageUrl" alt="@blog.Title" class="img-thumbnail" style="max-width: 100px;" />
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-warning btn-sm">Edit</a>
                                @if(blog.Status == true){
                                    <form asp-action="DeleteConfirmed" asp-route-id="@blog.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to hide this blog?');">Hide</button>
                                    </form>
                                } else {
                                    <form asp-action="DeleteConfirmed" asp-route-id="@blog.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Are you sure to show this blog?');">Show</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center mt-3">
                <a asp-action="Create" class="btn btn-primary">Add New Blog</a>
            </div>
        </div>
    </div>
</div>
