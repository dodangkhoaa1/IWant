@model IWant.Web.Models.BlogViewModel

@{
    ViewData["Title"] = "Edit Blog";
}

<h2>Edit Blog</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control summernote"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="col-2">
        <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Image</label>
    </div>
    <div class="col-10 pb-3">
        <input asp-for="Image" type="file" class="form-control" style="border-color: #cfa671;" />
        <input asp-for="ImageUrl" hidden />
        <input asp-for="ImageLocalPath" hidden />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Current Image" width="200" />
        }
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="true">Hiển thị</option>
            <option value="false">Ẩn</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
    <!-- Sửa lại dấu ngoặc kép và liên kết đúng với Summernote -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 200, // Set the height for the editor
                placeholder: 'Nhập nội dung bài viết...', // Thêm placeholder
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']], // Thêm các chức năng
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture']], // Thêm chức năng chèn ảnh và link
                    ['view', ['fullscreen', 'codeview']] // Chế độ xem code
                ]
            });
        });
    </script>
}
