                    <img style="width:100%;height:100% ; object-fit:contain" src="@topBlog.ImageUrl" alt="@topBlog.Title">
                </div>
                <div class="col-md-6">
                    <h1>@topBlog.Title</h1>
                    <div class="limited-text">
                        @Html.Raw(topBlog.Content)
                    </div>
                </div>
            </div>
        }

        @if (mostWatch != null)
