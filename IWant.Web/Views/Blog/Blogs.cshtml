        <div class="blog-header">
            <h1>Blogs</h1>
            <p>Blogs Highest Rating!</p>
        </div>
        @if (topBlog != null)
        {
            <div class="row main-article position-relative">
                <a asp-action="BlogDetail" asp-controller="Blog" asp-route-id="@topBlog.Id" class="stretched-link"></a>
