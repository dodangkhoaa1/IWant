@model List<BlogViewModel>

@{
    ViewData["Title"] = "Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var topBlog = Model.OrderByDescending(b => b.AverageRating).FirstOrDefault();

    var mostWatch = Model.OrderByDescending(b => b.ViewCount).Take(3).ToList();
}
<link rel="stylesheet" href="~/css/responsive.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/main.css" />
<link href="https://fonts.googleapis.com/css2?family=Athiti:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    /* Thiết lập chung */
    .blog-container {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        padding: 20px 0;
    }

    h1, h2, h3, h4, h5, h6,
    p, a, span, div, button,
    .meta-info, .read-more, .blog-header p, .card-title {
        font-family: 'Athiti', sans-serif !important;
    }

    .main-article {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        padding: 20px;
        margin: auto;
    }

        .main-article:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            background: #ffffff;
        }

        /* Hình ảnh */
        .main-article img {
            width: 100%;
            height: auto;
            object-fit: cover;
            border-radius: 10px;
            display: block;
            margin: auto;
            transition: transform 0.3s ease;
        }

        .main-article:hover img {
            transform: scale(1.05);
        }

    .main-news img,
    .sidebar-blog img {
        border-radius: 5px;
    }

    .sidebar-blog img {
        width: 60%;
        height: 100px;
    }

    /* Tiêu đề và văn bản */
    .main-article h1,
    .news-title,
    .card-title {
        font-size: 35px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
        transition: color 0.3s ease;
    }

    .card {
        height: 400px;
    }

        .card img {
            padding-bottom: 0;
            border-bottom: 1px solid black;
            object-fit: contain;
            width: 100%;
            height: 250px;
        }

    .card-title {
        height: 100px;
    }

    .remote-title {
        height: 50px;
    }

    .main-article:hover h1 {
        color: #ff6600;
    }

    .limited-text {
        font-size: 16px;
        color: #555;
        max-height: 230px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 10;
        -webkit-box-orient: vertical;
    }

    /* Meta info */
    .meta-info {
        font-size: 14px;
        color: gray;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .meta-info i {
            font-size: 16px;
            color: #ff5733;
        }

    /* Hiệu ứng hover cho bài viết phổ biến */
    .most-watched .card:hover,
    .most-see .news-item:hover,
    .sidebar .col-6:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
    }

    /* Pagination */
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 16px;
        gap: 4px;
    }

        .pagination a {
            display: inline-block;
            padding: 6px 12px;
            background: #fff;
            color: #000000;
            border: 1px solid #FEDA15;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.875rem;
            transition: background 0.2s;
        }

            .pagination a:hover {
                background: #FAF0E6;
                color: #000000;
            }

    /* Nút đọc thêm */
    .read-more {
        display: inline-block;
        margin: 10px auto;
        padding: 10px 16px;
        font-size: 1rem;
        font-weight: bold;
        color: #333;
        background-color: transparent;
        border: 2px solid rgba(226, 157, 82, 0.8);
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
        transition: background-color 0.3s ease-in-out;
    }

        .read-more:hover {
            background-color: rgba(226, 157, 82, 0.8);
            color: #fff;
        }

    /* Header */
    .section-header,
    .section-header1 {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        margin-bottom: 20px;
    }

        .section-header h3,
        .section-header1 h3 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .section-header .line,
        .section-header1 .line {
            flex-grow: 1;
            height: 4px;
            background-color: #BEBEBE;
        }

    /* Blog header */
    .blog-header {
        text-align: center;
        margin: 30px 0;
    }

        .blog-header h1 {
            font-size: 3rem;
            font-weight: bold;
            margin-top: 60px;
        }

        .blog-header p {
            font-size: 1rem;
            color: #364d59;
            position: relative;
            padding-bottom: 15px;
        }

            .blog-header p::after {
                content: "";
                display: block;
                width: 50%;
                height: 1px;
                justify-content: center;
                background-color: #364d59;
                margin: 10px auto;
            }

            .blog-header p::after {
                content: "";
                display: block;
                width: 100%;
                height: 3px;
                background-color: #BEBEBE;
                margin-top: 10px;
            }

    /* Tin tức */
    .news {
        width: 40%;
        margin: 10px 10px 20px 20px;
    }

    .news-container {
        display: flex;
        gap: 20px;
    }

    /* Sidebar */
    .sidebar-blog {
        display: flex;
        flex-direction: column;
        background: #fff;
        color: #000;
    }
</style>


<div class="blog-container">
