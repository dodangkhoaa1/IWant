@model IEnumerable<GameViewModel>
@{
    ViewData["Title"] = "Manage Video Game";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .game-header {
        text-align: center;
    }

        .game-header h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .game-header p {
            font-size: 1rem;
            color: #364d59;
            position: relative;
            padding-bottom: 15px;
        }

            .game-header p::after {
                content: "";
                display: block;
                width: 50%;
                height: 1px;
                justify-content: center;
                background-color: #364d59;
                margin: 10px auto;
            }

    .table-fixed tbody tr {
        border-bottom: 1px solid #dee2e6;
        height: 100px;
    }

    .manage-game-table-wrapper {
        background-color: #fff;
        overflow-x: auto;
    }

    .manage-game-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background-color: #fff;
    }

    .manage-game-thead tr {
        background-color: #e9ecef;
        color: #333;
    }

    .manage-game-thead th {
        text-align: left;
        padding: 12px;
        font-size: 0.9rem;
        color: #6c757d;
        border-bottom: 4px solid #FEDA15;
        font-weight: 600;
    }

    .manage-game-tbody td {
        padding: 12px;
        border-bottom: 1px solid #dee2e6;
        vertical-align: middle;
    }

    .manage-game-tbody tr:hover {
        background-color: #f6f6f6;
    }

    .manage-game-video {
        width: 300px;
        height: 150px;
        display: block;
        margin: 0 auto;
        border: none;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }
    /* Định nghĩa nhỏ lại cho các nút */
    .btn-xs {
        padding: 6px 14px;
        line-height: 1;
    }
</style>
<div class="manage-game-container">
    <div class="game-header">
        <h1>Manage Video Game</h1>
        <p></p>
    </div>
    <div class="manage-game-table-wrapper">
        <table class="manage-game-table">
            <thead class="manage-game-thead">
                <tr>
                    <th>Game Name</th>
                    <th style="width:400px">Description</th>
                    <th>Video Game Url</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="manage-game-tbody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            @{
                                var embedUrl = item.VideoUrl?.Replace("watch?v=", "embed/");
                            }
                            <iframe class="manage-game-video"
                                    src="@embedUrl"
                                    title="YouTube video player"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen>
                            </iframe>
                        </td>
                        <td>
                            <div class="action-buttons">
                                @if (string.IsNullOrWhiteSpace(item.VideoUrl))
                                {
                                    <a class="btn btn-success btn-xs" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-primary btn-xs" asp-action="Create" asp-route-id="@item.Id">Create</a>
                                }
                                else
                                {
                                    <a class="btn btn-success btn-xs" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    <a class="btn btn-warning btn-xs " asp-action="Edit" asp-route-id="@item.Id" style="color:#FFFFFF;">Edit</a>

                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
