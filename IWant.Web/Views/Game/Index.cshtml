@model IEnumerable<GameViewModel>

@{
    ViewData["Title"] = "Manage View Game";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Manage View Game</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Game Name
            </th>
            <th>
                Description
            </th>
            <th>
                Video Game Url
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @{
                        var embedUrl = item.VideoUrl?.Replace("watch?v=", "embed/");
                    }
                    <iframe style="width:300px;height:150px;margin:0 auto; display:block" src="@embedUrl"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                </td>
                <td>
                    @if (item.VideoUrl == "")
                    {
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-success" asp-action="Create" asp-route-id="@item.Id">Create</a>
                    } else if(item.VideoUrl != ""){
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
