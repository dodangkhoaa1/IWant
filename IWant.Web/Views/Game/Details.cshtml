@model GameViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<a asp-action="Index" asp-controller="Game"><i class="fa-solid fa-arrow-left"></i></a>

<h1>Details Video Game</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" style="height:250px" class="form-control" readonly>@Html.Raw(Model.Description)</textarea>

        </div>
        <div class="form-group">
            <label asp-for="VideoUrl" class="control-label"></label>
            <input asp-for="VideoUrl" class="form-control" readonly />
        </div>
    </div>
    <div class="col-md-7 align-items-center">
        @{
            var embedUrl = Model.VideoUrl.Replace("watch?v=", "embed/");
        }
        <iframe style="width:400px;height:400px;margin:0 auto; display:block" src="@embedUrl"
                title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>

    </div>
</div>

