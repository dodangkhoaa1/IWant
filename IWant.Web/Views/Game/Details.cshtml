@model GameViewModel

@{
    ViewData["Title"] = "Game Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<a asp-action="Index" asp-controller="Game" style="text-decoration:none;">
    <i class="fa-solid fa-arrow-left"
       style="margin:0; font-size:1.4rem; font-weight:800; color:#e67e22;">
    </i>
</a>

<div class="mt-5">
    <h1 style="margin:0 0 10px; font-size:1.8rem; font-weight:800; color:#e67e22;">DETAILS GAME</h1>
    <hr style="border-top:5px solid #FEDA15; margin-bottom:20px;" />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Name" style="font-weight:600; color:#333;"></label>
                <input asp-for="Name" class="form-control" style="border:1px solid #ccc;" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Description" style="font-weight:600; color:#333;"></label>
                <textarea asp-for="Description" class="form-control" style="height:220px; border:1px solid #ccc;" readonly>
                    @Html.Raw(Model.Description)
                </textarea>
            </div>
            <div class="mb-3">
                <label asp-for="VideoUrl" style="font-weight:600; color:#333;"></label>
                <input asp-for="VideoUrl" class="form-control" style="border:1px solid #ccc;" readonly />
            </div>
        </div>
        <div class="col-md-6 d-flex flex-column mt-4 align-items-center">
            @{
                var embedUrl = Model.VideoUrl?.Replace("watch?v=", "embed/");
            }
            <div style="width:80%; height:80%; border-radius:10px; overflow:hidden; box-shadow:0 2px 8px rgba(0,0,0,0.1);">
                <iframe style="width:100%; height:100%; border:0;"
                        src="@embedUrl"
                        title="YouTube video player"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>
</div>
