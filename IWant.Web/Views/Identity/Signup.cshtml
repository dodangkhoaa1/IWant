@using IWant.Web.Models
@model SignupViewModel
@{
    ViewData["Title"] = "Signup";
}

<div class="login-container signin-page">
    <div class="login-card">
        <h1>Sign Up</h1>

        <form style="padding:0 20px" asp-controller="Identity" asp-action="Signup" method="post">

            <div style="margin-bottom: 15px;">
                <input type="email" asp-for="Email" placeholder="Email" class="custom-input" />
            </div>

            <div style="margin-bottom: 15px;">
                <input type="text" asp-for="FullName" placeholder="Full Name" class="custom-input" />
            </div>

            <div style="margin-bottom: 15px">
                <input type="text" asp-for="PhoneNumber" placeholder="Phone Number" class="custom-input" />
            </div>

            <div style="margin-bottom: 15px">
                <input type="date" asp-for="Birthday" placeholder="Birthday" class="custom-input" />
            </div>

            <div style="margin-bottom: 15px;">
                <select asp-for="Gender" class="custom-input">
                    <option value="">Other</option>
                    <option value="true">Male</option>
                    <option value="false">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div style="margin-bottom: 15px;">
                <input type="password" asp-for="Password" placeholder="Password" class="custom-input" />
            </div>

            <div style="margin-bottom: 15px;">
                <input type="password" asp-for="ConfirmPassword" placeholder="Re-Password" class="custom-input" />
            </div>

            @*Child Information*@

            <div style="margin-bottom: 15px;">
                <input type="text" asp-for="ChildName" placeholder="Child Name" class="custom-input" />
            </div>

            <div style="margin-bottom: 15px;">
                <input type="text" asp-for="ChildNickName" placeholder="Child Nick Name" class="custom-input" />
            </div>

            <div style="margin-bottom: 15px;">
                <input type="date" asp-for="ChildBirthday" class="custom-input" />
            </div>

            <div style="margin-bottom: 15px;">
                <select asp-for="ChildGender" class="custom-input">
                    <option value="">Other</option>
                    <option value="true">Male</option>
                    <option value="false">Female</option>
                </select>
                <span asp-validation-for="ChildGender" class="text-danger"></span>
            </div>

            <div class="d-flex">
                <input type="checkbox" name="Term&Condition" />
                <p>I accept with <a target="_blank" asp-controller="Home" asp-action="Privacy">Term & Condition</a></p>
            </div>

            <input type="hidden" asp-for="Role" class="form-control" value="Member" />
            <div style="text-align: center; margin-bottom: 0">
                <button type="submit" class="btn btn-primary" style="width:200px; padding: 10px; background-color: #FEDA15; border: none; border-radius: 25px; color: #fff; font-size: 16px; font-weight: bold; cursor: pointer;margin:0 auto;">SIGN UP</button>
            </div>
        </form>


        <div class="d-flex justify-content-between">
            <p style=" font-size: 12px; margin:auto 0; ">
                Already have a account? <a asp-action="Signin" style="color: #FEDA15;font-weight:bold">Sign In</a>
            </p>
            <img src="~/images/mascot-1.png" alt="Alternate Text" />
        </div>
    </div>
</div>