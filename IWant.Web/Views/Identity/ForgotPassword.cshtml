@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/main.css" />
<link rel="stylesheet" href="~/css/responsive.css" />
<link rel="stylesheet" href="~/css/site.css" />
<style>
    .forgotPassword-container {
        margin: 30px 0;
        padding-right: 30px;
        background-color: #FEDA15;
        display: flex;
        justify-content: center;
        align-items: center;
        justify-content: center;
        padding: 40px;
        height: 100vh;
        justify-content: center;
        padding: 40px;
        height: 100vh;
    }

        .forgotPassword-container .forgotPassword-card {
            background-color: #fff;
            border-radius: 10px;
            width: 400px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            border-radius: 10px;
            background-color: #fff;
            height: auto;
            align-items: center;
            overflow: hidden;
            z-index: 2
        }

            .forgotPassword-container .forgotPassword-card h1 {
                text-align: center;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .forgotPassword-container .forgotPassword-card .custom-input {
                width: 80%;
                padding-top: 10px;
                margin-bottom: 10px;
                border: none;
                border-bottom: 2px solid #000;
                font-size: 16px;
                font-family: Arial, sans-serif;
                outline: none;
                box-shadow: none;
            }

                .forgotPassword-container .forgotPassword-card .custom-input::placeholder {
                    color: #BEBEBE;
                    font-size: 14px;
                }

                .forgotPassword-container .forgotPassword-card .custom-input:focus {
                    border-bottom: 2px solid #FEDA15;
                }

            .forgotPassword-container .forgotPassword-card .password-toggle {
                position: absolute;
                top: 40%;
                right: 0;
                transform: translateY(-50%);
                cursor: pointer;
                color: #FEDA15;
                font-size: 20px;
            }

    .forgotPassword-btn {
        width: 70%;
        padding: 10px;
        margin-bottom: 10px;
        background-color: #FEDA15;
        border: none;
        border-radius: 10px;
        color: #fff;
        font-size: 16px;
        font-weight: 400;
        cursor: pointer;
    }

    /* Liên kết quay lại Sign In */
    .forgotPassword-back {
        margin-top: 10px;
        font-size: 14px;
        color: #9B30FF;
        text-decoration: none;
    }

    /* Icon mũi tên */
    .back-icon {
        font-size: 16px;
    }

    .title-forgot {
        font-size: 32px;
        margin-top: 20px;
        margin-bottom: 30px;
        text-align: center;
    }
</style>
<div class="d-flex forgotPassword-container">
    <div class="confetti-container"></div>
    <div class="forgotPassword-card">
        <form asp-action="ForgotPassword" method="post" style="margin: 20px auto; text-align: center; display: flex; flex-direction: column; align-items: center; width: 100%;">
            <h1 class="title-forgot">Forgot Password</h1>
            <input type="text" asp-for="Email" placeholder="Email" class="custom-input" />
            <div style="width: 70%; text-align: left; margin-bottom: 10px;">
                <p style="font-size: 14px; color: #888; margin: 0;">*Please enter your registered email</p>
            </div>
            <span asp-validation-for="Email" class="text-danger" style="margin-bottom: 40px;"></span>
            <button type="submit" class="btn btn-primary forgotPassword-btn">Continue</button>
            <a asp-action="Signin" class="forgotPassword-back">
                <i class="fas fa-arrow-left back-icon"></i> Back to Sign In
            </a>
        </form>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const confettiContainer = document.querySelector('.confetti-container');

        function createConfetti() {
            const confetti = document.createElement('div');
            confetti.classList.add('confetti');
            confetti.style.left = Math.random() * 100 + 'vw';
            confetti.style.backgroundColor = getRandomColor();
            confetti.style.animationDuration = Math.random() * 2 + 3 + 's';
            confetti.style.width = Math.random() * 5 + 2 + 'px';
            confetti.style.height = Math.random() * 25 + 15 + 'px';

            confettiContainer.appendChild(confetti);

            setTimeout(() => confetti.remove(), 5000);
        }

        function getRandomColor() {
            const colors = [
                '#FFD700', '#FF4500', '#1E90FF', '#32CD32', '#FF69B4', '#8A2BE2',
                '#FF6347', '#00FA9A', '#9400D3', '#FF7F50', '#00CED1', '#FFB6C1',
                '#4B0082', '#ADFF2F'
            ];
            return colors[Math.floor(Math.random() * colors.length)];
        }

        setInterval(createConfetti, 200);
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}