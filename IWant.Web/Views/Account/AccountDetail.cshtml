@model AccountDetailViewModel

@{
    ViewData["Title"] = "Account Detail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<a asp-action="Index" class="ms-3 mt-3 d-inline-block" style="margin: 0; font-size: 1.4rem; font-weight: 800; color: #e67e22;">
    <i class="fa-solid fa-arrow-left"></i>
</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}


<div style="margin-top:100px" class="container">
    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="text-center mb-3">
                <label for="avatarInput" class="position-relative d-block">
                    <img id="avatarPreview"
                         class="rounded-circle shadow mb-3"
                         style="width:120px; height:120px; object-fit:cover; cursor:pointer; border: 1px solid #FEDA15;"
                         src="@Model.ImageUrl"
                         alt="Profile Picture">
                </label>
                <h4 class="mb-1">@Model.FullName</h4>
                <p class="text-muted">@Model.Email</p>
            </div>
            <hr style="border-top: 2px solid #FEDA15;" />
            <div class="d-flex justify-content-around">
                <div>
                    <h5 class="mb-1">Blogs</h5>
                    <p class="text-muted">@Model.TotalBlogs</p>
                </div>
                <div>
                    <h5 class="mb-1">Rates</h5>
                    <p class="text-muted">@Model.TotalRates</p>
                </div>
                <div>
                    <h5 class="mb-1">Comments</h5>
                    <p class="text-muted">@Model.TotalComments</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h1 class="mb-4" style="margin: 0; font-size: 1.8rem; font-weight: 800; color: #e67e22;">
                Account Member Profile
            </h1>
            <div class="row">

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label text-muted">Full Name</label>
                        <input asp-for="FullName" class="form-control" disabled>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label text-muted">Phone</label>
                        <input asp-for="PhoneNumber" type="text" class="form-control" disabled>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Birthday" class="form-label text-muted">Birthday</label>
                        <input asp-for="Birthday" type="date" class="form-control" disabled>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label text-muted">Gender</label>
                        <select asp-for="Gender" class="form-select" disabled>
                            <option selected="@(Model.Gender==true)" value="true">Male</option>
                            <option selected="@(Model.Gender==false)" value="false">Female</option>
                            <option selected="@(Model.Gender==null)" value="">Other</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ChildName" class="form-label text-muted">Child Name</label>
                        <input asp-for="ChildName" class="form-control" disabled>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ChildNickName" class="form-label text-muted">Child Nickname</label>
                        <input asp-for="ChildNickName" class="form-control" disabled>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ChildBirthday" class="form-label text-muted">Child Birthday</label>
                        <input asp-for="ChildBirthday" type="date" class="form-control" disabled>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ChildGender" class="form-label text-muted">Child Gender</label>
                        <select asp-for="ChildGender" class="form-select" disabled>
                            <option selected="@(Model.ChildGender==true)" value="true">Male</option>
                            <option selected="@(Model.ChildGender==false)" value="false">Female</option>
                            <option selected="@(Model.ChildGender==null)" value="">Other</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




