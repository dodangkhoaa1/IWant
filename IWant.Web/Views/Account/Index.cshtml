@model List<AccountViewModel>

@{
    ViewData["Title"] = "Manage Account";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .account-image{
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%;
    border: 1px solid black;
    }
</style>
<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h2>Mamange Accounts</h2>
        </div>
        <div class="card-body p-4">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>Avatar</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var account in Model){
                        if (account.Id == "0bcbb4f7-72f9-435f-9cb3-1621b4503974") continue;
                        <tr>
                            <td>
                                <img class="account-image" src="@account.ImageUrl" alt="AvatarAccount" />
                            </td>
                            <td>@account.FullName</td>
                            <td>@account.Email</td>
                            <td>@(account.Status == true ? "Active" : "Banned")</td>
                            <td>
                                @if(account.Status){
                                    <a asp-action="UpdateStatus" asp-route-id="@account.Id" class="btn btn-danger">Banned</a>
                                } else {
                                    <a asp-action="UpdateStatus" asp-route-id="@account.Id" class="btn btn-success">Active</a>
                                }
                                <a asp-action="AccountDetail" asp-route-id="@account.Id" class="btn btn-primary">Detail</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

