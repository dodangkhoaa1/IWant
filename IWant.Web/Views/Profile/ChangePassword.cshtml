@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container-center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 600px;
        background-color: #FEDA15;
    }


    .password-card {
        width: 550px;
        height: 500px;
        background: #FFFFFF;
        border-radius: 15px;
        padding: 20px;
        text-align: center;
        font-family: Arial, sans-serif;
        position: relative;
    }

    .lock-icon-wrapper {
        position: relative;
        display: inline-block;
        width: 80px;
        height: 60px;
        margin-bottom: 20px;
    }

    .input-group {
        display: flex;
        justify-content: center;
        width: 100%;
    }

        .input-group input {
            width: 80%;
            padding: 10px;
            border: none;
            border-bottom: 2px solid black;
            font-size: 16px;
            outline: none;
            background: transparent !important;
            color: #000;
            box-shadow: none;
        }




    .lock-background {
        width: 80px;
        height: 80px;
        background-color: rgba(255, 223, 128, 0.3); /* Màu vàng nhạt */
        border-radius: 50%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 0;
    }

    .lock-icon {
        font-size: 50px;
        color: #ffcc00;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1;
    }

    .check-icon {
        font-size: 20px;
        color: #ff6666;
        background-color: white;
        border-radius: 50%;
        padding: 5px;
        position: absolute;
        bottom: 5px;
        right: 5px;
        z-index: 2;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }


    .title {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .subtitle {
        font-size: 12px;
        color: #666;
        margin-bottom: 15px;
    }


    .forgotPassword-container {
        margin: 30px 0;
        padding-right: 30px;
        background-color: #FFFFFF;
        display: flex;
        justify-content: center;
        align-items: center;
    }


    .logo-1 {
        width: 100px;
        height: auto;
        position: absolute;
        right: 20px;
        bottom: 20px;
        opacity: 1;
        transition: opacity 0.5s ease-in-out;
    }

</style>

<body>
    <div class="container-center ">
        <div class="confetti-container"></div>
        <div class="password-card">

            <div class="lock-icon-wrapper">
                <div class="lock-background"></div>
                <i class="fas fa-lock lock-icon"></i>
                <i class="fas fa-check check-icon"></i>

            </div>
            <h5 class="title">Change Password</h5>

            <div class=" custom-input  ">

                <div class="forgotPassword-card">
                    <form asp-action="ResetPassword" method="post">
                        <div class="input-group" style="margin-bottom: 20px; margin-top: 10px;">
                            <input type="password" placeholder="Current Password" class="custom-input" />
                        </div>
                        <div class="input-group" style="margin-bottom: 20px;">
                            <input type="password" placeholder="New Password" class="custom-input" />
                        </div>
                        <div class="input-group" style="margin-bottom: 20px;">
                            <input type="password" placeholder="Confirm Password" class="custom-input" />
                        </div>

                        <button type="submit" style="width: 80%;  margin-top:10px ;padding: 10px; background-color: #FEDA15; border: none; border-radius: 10px; color: #fff; font-size: 16px; font-weight: 400; cursor: pointer;">Change Password</button>
                    </form>
                </div>
            </div>
            <div class="endMascot logo-1" style="display: flex; justify-content: flex-end;">
                <img src="~/images/mascot-1.png" style="width: 70%;" />
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const confettiContainer = document.querySelector('.confetti-container');

            function createConfetti() {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.backgroundColor = getRandomColor();
                confetti.style.animationDuration = Math.random() * 2 + 3 + 's';
                confetti.style.width = Math.random() * 5 + 2 + 'px';
                confetti.style.height = Math.random() * 25 + 15 + 'px';

                confettiContainer.appendChild(confetti);

                setTimeout(() => confetti.remove(), 5000);
            }
            function getRandomColor() {
                const colors = [
                    '#FFD700', '#FF4500', '#1E90FF', '#32CD32', '#FF69B4', '#8A2BE2',
                    '#FF6347', '#00FA9A', '#9400D3', '#FF7F50', '#00CED1', '#FFB6C1',
                    '#4B0082', '#ADFF2F'
                ];
                return colors[Math.floor(Math.random() * colors.length)];
            }
            setInterval(createConfetti, 200);
        });
    </script>

</body>
