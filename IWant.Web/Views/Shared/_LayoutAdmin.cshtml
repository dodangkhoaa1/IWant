<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdn.datatables.net/2.1.7/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Arbutus+Slab&family=Athiti:wght@400;500;600&display=swap"
          rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: var(--font-default);
            background-color: #f4f4f4;
        }

        .sidebar {
            background: #FFFFFF;
            padding-top: 20px;
            font-family: 'Arbutus Slab', serif;
            position: fixed;
            width: 200px;
            top: 0;
            bottom: 0;
            margin: 20px 0px 20px 20px;
            border-radius: 10px;
        }

        .sidebar-brand {
            text-align: center;
            margin-bottom: 10px;
        }

            .sidebar-brand img {
                width: 50%;
                height: 50%;
            }

        .list-group {
            margin-top: 20px;
            margin-right: 15px;
        }

        .list-group-item {
            background-color: rgba(255, 255, 255, 0.1);
            color: #000000;
            border: none;
            font-family: 'Athiti', sans-serif;
            font-size: 14px;
        }

            .list-group-item a {
                text-decoration: none;
                color: #010101;
                font-family: 'Athiti', sans-serif;
            }

            .list-group-item:hover {
                text-decoration: none;
                background-color: #f4f4f4;
                color: #000000;
                padding-left: 25px;
                border-radius: 0 10px 10px 0;
            }

            .list-group-item i {
                margin-right: 15px;
                font-size: 20px;
                color: #000000;
                background-color: #FFFFFF;
                padding: 8px;
                border-radius: 8px;
                width: 36px;
                height: 36px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .list-group-item:hover i {
                background-color: #FEDA15;
                color: #FFFFFF;
            }


        .content {
            padding: 20px;
            margin-left: 320px;
            margin-top: 100px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1);
            font-family: 'Athiti', sans-serif;
        }

        .btn-custom {
            background-color: #FF7F00;
            color: white;
        }

            .btn-custom:hover {
                background-color: #cfa671;
            }

        .text-muted {
            font-size: 12px;
            font-weight: 500;
            margin-left: 10px;
            margin-top: 10px;
            color: #000000;
        }

        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: white;
            padding: 10px 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 10px;
            position: fixed;
            top: 10px;
            right: 20px;
            width: 100%;
            max-width: 76vw;
            min-width: 600px;
            z-index: 1000;
        }



        .navbar-left .logo {
            font-size: 18px;
            font-weight: bold;
        }

        .navbar-center i {
            font-size: 20px;
            color: #333;
            cursor: pointer;
        }

        .navbar-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }



        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid #ddd;
        }

        .dropdown {
            position: absolute;
            top: 50px;
            right: 0;
            background: white;
            color: black;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            width: 200px;
            height: 150px;
            display: none;
            margin-top: 10px;
            flex-direction: column;
            padding: 10px 0;
        }

            .dropdown a {
                padding: 12px 15px;
                text-decoration: none;
                color: black;
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 14px;
            }





        .show {
            display: flex;
        }
    </style>
</head>

<body>
    <nav class="navbar">
        <div class="navbar-left">
            <span class="logo"> ADMIN</span>
        </div>

        <div class="navbar-right">

            <img src="https://i.pravatar.cc/40" alt="User Avatar" class="avatar" id="avatar">

            <!-- Dropdown -->
            <div class="dropdown" id="dropdown">
                <a href="#" class="list-group-item d-flex align-items-center">
                    <i class="fa-regular fa-user"></i> My
                    Profile
                </a>
                <a href="#" class="list-group-item d-flex align-items-center"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
            </div>
        </div>
    </nav>


    <div class="sidebar" style="width: 290px">
        <div class="sidebar-brand">
            <img src="./assets/img/Icon.png" alt="Logo">
        </div>

        <div class="list-group">
            <h6 class="text-muted">DASHBOARD</h6>
            <a asp-controller="Admin" asp-action="AdminIndex" class="list-group-item d-flex align-items-center">
                <i class="fa-solid fa-chart-line"></i>Statistic
            </a>
            <h6 class="text-muted mt-3">MANAGE</h6>

            <!-- Additional links for Shop, initially hidden -->

            <a asp-controller="Chat" asp-action="ChatIndex" class="list-group-item d-flex align-items-center">
                <i class="fa-brands fa-rocketchat"></i>Chat
            </a>
            <a asp-controller="Blog" asp-action="BlogIndex" class="list-group-item d-flex align-items-center">
                <i class="fa-solid fa-blog"></i>Blog
            </a>
            <a asp-controller="Auth" asp-action="ManageCustomers" class="list-group-item d-flex align-items-center">
                <i class="fa-solid fa-users"></i>Member
            </a>
            <a asp-controller="Auth" asp-action="ManageCustomers" class="list-group-item d-flex align-items-center">
                <i class="fa-solid fa-shield-halved"></i>Privacy & Police
            </a>
            <a asp-controller="Feedback" asp-action="FeedbackIndex" class="list-group-item d-flex align-items-center">
                <i class="fa-solid fa-pen"></i>Feedback
            </a>
            <!--
            <h6 class="text-muted mt-3">USER</h6>
            <div id="profileSection">
                <a href="#" class="list-group-item d-flex align-items-center profile-link">
                    <i class="fa-solid fa-user"></i>Profile
                </a>
                <div id="additionalLinksContainer"></div>
            </div>
            -->
        </div>
        <!--
        <a asp-controller="Auth" asp-action="Logout" class="list-group-item d-flex align-items-center logout">
            <i class="fa-solid fa-right-to-bracket"></i>Logout
        </a>
        -->
    </div>

    <div style="min-height: 800px;" class="content">
        @RenderBody()
    </div>
    <partial name="_Notification" />

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="//cdn.datatables.net/2.1.7/js/dataTables.min.js"></script>


</body>

</html>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const avatar = document.getElementById("avatar");
        const dropdown = document.getElementById("dropdown");

        avatar.addEventListener("click", function (event) {
            dropdown.classList.toggle("show");
            event.stopPropagation();
        });

        document.addEventListener("click", function () {
            dropdown.classList.remove("show");
        });

        dropdown.addEventListener("click", function (event) {
            event.stopPropagation();
        });
    });
</script>