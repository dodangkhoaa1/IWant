<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - I Want</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet" />
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet" />
    <link href="~/lib/aos/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Site Icons -->
    <link rel="shortcut icon" href="~/images/mascot-1.png" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/images/mascot-1.png">


    <style>
        .avatar-layout{
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
            border: 1px solid black;
        }

        .dropdown {
            position: absolute;
            top: 50px;
            right: 0;
            background: white;
            color: black;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            display: none;
            margin-top: 10px;
            flex-direction: column;
            padding: 10px 0;
        }

            .dropdown a {
                padding: 12px 15px;
                text-decoration: none;
                color: black;
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 14px;
            }

        .dropdown-menu.show {
            display: block !important;
        }

        .list-group-item {
            background-color: rgba(255, 255, 255, 0.1);
            color: #000000;
            border: none;
            font-family: 'Athiti', sans-serif;
            font-size: 14px;
        }

            .list-group-item a {
                text-decoration: none;
                color: #010101;
                font-family: 'Athiti', sans-serif;
            }

            .list-group-item:hover {
                text-decoration: none;
                background-color: #f4f4f4;
                color: #000000;
                padding-left: 25px;
                border-radius: 0 10px 10px 0;
            }

            .list-group-item i {
                margin-right: 15px;
                font-size: 20px;
                color: #000000;
                background-color: #FFFFFF;
                padding: 8px;
                border-radius: 8px;
                width: 36px;
                height: 36px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .list-group-item:hover i {
                background-color: #FEDA15;
                color: #FFFFFF;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow px-5">
                <div class="container-fluid d-flex align-items-center justify-content-between">
                    <a class="logo navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/iWantLogo.png" alt="Alternate Text" />
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav ms-auto">
                            <li style="margin-right:50px" class="nav-item">
                                <a class="nav-link" style="color: #9B30FF;" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>
                            <li style="margin-right:50px" class="nav-item">
                                <a class="nav-link" style="color: #9B30FF;" asp-controller="Home" asp-action="AboutUs">ABOUT US</a>
                            </li>
                            <li style="margin-right:50px" class="nav-item">
                                <a class="nav-link" style="color: #9B30FF;" asp-controller="Home" asp-action="Game">GAME</a>
                            </li>
                            <li style="margin-right:550px" class="nav-item">
                                <a class="nav-link" style="color: #9B30FF;" asp-controller="Blog" asp-action="Blogs">BLOG</a>
                            </li>
                            <partial name="_Identity" />
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="body">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <partial name="_Notification" />

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="footer-content position-relative">
            <div class="container">
                <div class="row justify-content-between align-items-center">

                    <!-- Game Column -->
                    <div class="col-lg-3 col-md-3 footer-links">
                        <h4>GAME</h4>
                        <ul>
                            <li><a href="#">Learn To Love Growth</a></li>
                            <li><a href="#">And Change And You Will</a></li>
                            <li><a href="#">Be A Success. Microsoft</a></li>
                            <li><a href="#">Patch</a></li>
                        </ul>
                    </div>

                    <!-- Vertical Divider -->
                    <div class="vertical-divider"></div>

                    <!-- Center Section with Social Links -->
                    <div class="col-lg-3 col-md-3 text-center">
                        <div class="social-links d-flex justify-content-center mb-2">
                            <a href="#" class="d-flex align-items-center justify-content-center mx-2">
                                <i class="fa-brands fa-facebook"></i>
                            </a>
                            <a href="#" class="d-flex align-items-center justify-content-center mx-2">
                                <i class="fa-brands fa-youtube"></i>
                            </a>
                            <a href="#" class="d-flex align-items-center justify-content-center mx-2">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                        </div>
                        <h4>IWANT</h4>
                    </div>

                    <!-- Vertical Divider -->
                    <div class="vertical-divider"></div>

                    <!-- Blog Column -->
                    <div class="col-lg-3 col-md-3 footer-links">
                        <h4>BLOG</h4>
                        <ul>
                            <li><a href="#">Career</a></li>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Government Securities</a></li>
                            <li><a href="#">Examples</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- End Footer -->




    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/lib/aos/aos.js"></script>
    <script src="~/lib/glightbox/js/glightbox.min.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/purecounter/purecounter_vanilla.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const avatar = document.getElementById("Avatar");
            const dropdown = document.getElementById("dropdown");

            avatar.addEventListener("click", function (event) {
                if (dropdown.style.display === "block") {
                    dropdown.style.display = "none";  
                } else {
                    dropdown.style.display = "block";  
                }
                event.stopPropagation();  
            });

            
            document.addEventListener("click", function () {
                dropdown.style.display = "none";
            });

            
            dropdown.addEventListener("click", function (event) {
                event.stopPropagation(); 
            });
        });
    </script>
</body>


</html>
