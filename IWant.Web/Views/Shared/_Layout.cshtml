<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - I Want</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet" />
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet" />
    <link href="~/lib/aos/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/images/mascot-1.png" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/images/mascot-1.png">
    <style>
        .avatar-layout {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
            border: 1px solid black;
        }

        .dropdown {
            position: absolute;
            right: 3%;
            background: white;
            color: black;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border-radius: 15px;
            display: none;
            margin-top: 10px;
            flex-direction: column;
            padding: 10px 0;
        }

        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 998;
            display: none;
        }

        body.no-scroll {
            overflow: hidden;
            pointer-events: none;
        }

            body.no-scroll #navbarNav {
                pointer-events: auto;
                overflow: auto;
                padding-top: 65px;
            }

        .dropdown a {
            padding: 12px 15px;
            text-decoration: none;
            color: black;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 14px;
        }

        .dropdown-menu.show {
            display: block !important;
        }

        .list-group-item {
            background-color: rgba(255,255,255,0.1);
            color: #000;
            border: none;
            font-family: 'Athiti', sans-serif;
            font-size: 14px;
        }

            .list-group-item a {
                text-decoration: none;
                color: #010101;
                font-family: 'Athiti', sans-serif;
            }

            .list-group-item:hover {
                text-decoration: none;
                background-color: #f4f4f4;
                color: #000;
                border-radius: 0 10px 10px 0;
            }

            .list-group-item i {
                font-size: 20px;
                color: #000;
                background-color: #fff;
                padding: 8px;
                border-radius: 8px;
                width: 36px;
                height: 36px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .list-group-item:hover i {
                background-color: #FEDA15;
                color: #fff;
            }

        .footer-item .game a:hover {
            color: #ff9800 !important;
            font-weight:bold
        }

        .footer-item .social .facebook:hover {
            background-color: #3F51B5;
        }

        .footer-item .social .facebook:hover i{
            color: white;
        }
        
        .footer-item .social .youtube:hover {
            background-color: #FF3D00;
            color: white;
        }

        .footer-item .social .youtube:hover i{
            color: white;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow px-5">
                <div class="container-fluid d-flex align-items-center justify-content-between">
                    <a class="logo navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="/images/iWantLogo.png" alt="Alternate Text" />
                    </a>
                    <button class="navbar-toggler" type="button" id="customMenuToggle" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon" id="hamburgerIcon"></span>
                        <img id="togglerAvatar" src="/images/default-avatar.png" alt="Avatar" style="width: 40px; height: 40px; border-radius: 50%; border: 1px solid #FEDA15" />
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto justify-content-center">
                            <li class="nav-item gap-5">
                                <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="Index">
                                    <i class="fa-solid fa-house-chimney menu-icon me-2"></i> HOME
                                </a>
                            </li>
                            <li class="nav-item gap-5">
                                <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="AboutUs">
                                    <i class="fa-solid fa-users menu-icon me-2"></i> ABOUT US
                                </a>
                            </li>
                            <li class="nav-item gap-5">
                                <a class="nav-link d-flex align-items-center" asp-controller="Game" asp-action="GameDetails">
                                    <i class="fa-solid fa-gamepad menu-icon me-2"></i> GAME
                                </a>
                            </li>
                            <li class="nav-item gap-5">
                                <a class="nav-link d-flex align-items-center" asp-controller="Blog" asp-action="Blogs">
                                    <i class="fa-solid fa-blog menu-icon me-2"></i> BLOG
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto d-flex">
                            <li class="nav-item">
                                <partial name="_Identity" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div style="margin-top:70px" class="body">
            <main role="main" class="">
                @RenderBody()
            </main>
        </div>
    </div>
    <partial name="_Notification" />
    <footer id="footer">
        <div style="background: url(/images/footerbanner.svg) no-repeat center bottom; background-size: cover;" class="container-fluid footer py-1 wow fadeIn text-dark" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5 justify-content-between">
                    <div class="col-md-6 col-lg-4 col-xl-4">
                        <div class="footer-item">
                            <h2 class="">
                                <a asp-action="Index" asp-controller="Home">
                                    <img style="width:12vw" src="/images/iWantLogo.png" alt="Alternate Text" />
                                </a>
                            </h2>
                            <p style="text-align:justify" class="mb-4 fs-6">I Want - Alternative communication application for autistic children, combining educational games to help express emotions and develop thinking. </p>
                            <div class="position-relative mx-auto rounded text-dark mb-2" style="max-width: 400px">
                                <a href="https://daihoc.fpt.edu.vn/truong-thanh-vien/truong-dai-hoc-fpt-can-tho/" target="_blank">
                                    <img style="width:60%" src="/images/fpt-logo.png" alt="Fpt Logo" />
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="footer-item">
                            <h4 class="text-warning mb-4 border-bottom border-warning border-2 d-inline-block p-2 title-border-radius text-dark fs-4">GAME</h4>
                            <div class="d-flex flex-column p-2 ps-2 text-dark border border-warning text-start game"
                                 style="border-radius: 50% 20% / 10% 40%">
                                <a asp-action="GameDetails" asp-controller="Game" asp-fragment="AAC-section" class="fs-6 mb-4 ms-4 text-black">AAC</a>
                                <a asp-action="GameDetails" asp-controller="Game" asp-fragment="Fruit-section" class="fs-6 mb-4 ms-4 text-black">Fruit Drop</a>
                                <a asp-action="GameDetails" asp-controller="Game" asp-fragment="Dot-section" class="fs-6 mb-4 ms-4 text-black">Dot Connection</a>
                                <a asp-action="GameDetails" asp-controller="Game" asp-fragment="Emotion-section" class="fs-6 mb-4 ms-4 text-black">Emotion Selection</a>
                                <a asp-action="GameDetails" asp-controller="Game" asp-fragment="Color-section" class="fs-6 mb-4 ms-4 text-black">Coloring</a>
                                <a asp-action="GameDetails" asp-controller="Game" asp-fragment="Tower-section" class="fs-6 ms-4 text-black">Tower Build</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 col-xl-4">
                        <div class="footer-item">
                            <h4 class="text-warning mb-4 border-bottom border-warning border-2 d-inline-block p-2 title-border-radius text-dark fs-4">LOCATION</h4>
                            <div class="d-flex flex-column align-items-start flex-column justify-content-between">
                                <p href="" class="text-start rounded-0 text-dark mb-4 fs-6"><i class="fa fa-map-marker-alt text-warning me-2"></i>Ninh Kieu district, Can Tho city, Viet Nam</p>
                                <p href="" class="text-start rounded-0 text-dark mb-4 fs-6"><i class="fa fa-phone-alt text-warning me-2"></i> (+84) 888 408 052</p>
                                <p href="" class="text-start rounded-0 text-dark mb-4 fs-6"><i class="fas fa-envelope text-warning me-2"></i>iwantofficial@gmail.com</p>
                                <div class="footer-icon d-flex justify-content-between social">
                                    <a style="width: 50px;" href="https://www.facebook.com/vo.minh.nhut.947669" class="btn btn-warning btn-sm-square me-3 rounded-circle text-dark fs-4 facebook"><i class="fab fa-facebook-f"></i></a>
                                    <a style="width: 50px;" href="https://www.youtube.com/%40IWantGameOfficial" class="btn btn-warning btn-sm-square rounded-circle text-dark fs-4 youtube"><i class="fab fa-youtube"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/lib/aos/aos.js"></script>
    <script src="~/lib/glightbox/js/glightbox.min.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/purecounter/purecounter_vanilla.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const avatar = document.getElementById("Avatar");
            const dropdown = document.getElementById("dropdown");

            avatar.addEventListener("click", function (event) {
                if (dropdown.style.display === "block") {
                    dropdown.style.display = "none";
                } else {
                    dropdown.style.display = "block";
                }
                event.stopPropagation();
            });


            document.addEventListener("click", function () {
                dropdown.style.display = "none";
            });


            dropdown.addEventListener("click", function (event) {
                event.stopPropagation();
            });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const identityAvatar = document.getElementById("Avatar");
            const togglerAvatar = document.getElementById("togglerAvatar");
            const hamburgerIcon = document.getElementById("hamburgerIcon");
            const menuToggle = document.getElementById("customMenuToggle");
            const navbarNav = document.getElementById("navbarNav");
            const closeMenuBtn = document.getElementById("closeMenuBtn");
            let overlay = document.getElementById("overlay");
            if (!overlay) {
                overlay = document.createElement("div");
                overlay.id = "overlay";
                document.body.appendChild(overlay);
            }
            togglerAvatar.style.display = "none";
            hamburgerIcon.style.display = "inline-block";
            function openMenu() {
                navbarNav.classList.add("show");
                document.body.classList.add("no-scroll");
                overlay.style.display = "block";
                if (identityAvatar && identityAvatar.src && identityAvatar.src.trim() !== "") {
                    hamburgerIcon.style.display = "none";
                    togglerAvatar.style.display = "inline-block";
                    togglerAvatar.src = identityAvatar.src;
                } else {
                    hamburgerIcon.style.display = "inline-block";
                    togglerAvatar.style.display = "none";
                }
            }
            function closeMenu() {
                navbarNav.classList.remove("show");
                document.body.classList.remove("no-scroll");
                overlay.style.display = "none";
                hamburgerIcon.style.display = "inline-block";
                togglerAvatar.style.display = "none";
            }
            menuToggle.addEventListener("click", openMenu);
            closeMenuBtn.addEventListener("click", closeMenu);
            overlay.addEventListener("click", closeMenu);
        });
    </script>
</body>
</html>
