@model IWant.BusinessObject.Enitities.Word

@{
    ViewData["Title"] = "Word Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Word Details</h1>

<div>
    <h4>Word</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Vietnamese Text
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VietnameseText)
        </dd>
        <dt class="col-sm-2">
            English Text
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnglishText)
        </dd>
        <dt class="col-sm-2">
            Created At
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            Updated At
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Word Image" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Word Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WordCategory.EnglishName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
