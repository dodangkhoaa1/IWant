@model IEnumerable<IWant.Web.Models.BlogViewModel>
@{
    ViewData["Title"] = "Comment Manage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Header giống design Manage Accounts */
    .comment-header {
        text-align: center;
        margin: 30px 0;
    }

        .comment-header h2 {
            font-size: 3rem;
            font-weight: bold;
        }

        .comment-header p {
            font-size: 1rem;
            color: #364d59;
            position: relative;
            padding-bottom: 15px;
        }

            .comment-header p::after {
                content: "";
                display: block;
                width: 50%;
                height: 1px;
                background-color: #364d59;
                margin: 10px auto;
            }

    .comment-table thead th {
        background-color: #e9ecef !important;
        color: #6c757d !important;
        border-bottom: 4px solid #FEDA15;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .comment-table tbody tr {
        height: 90px;
    }

        .comment-table tbody tr td {
            height: 90px;
            vertical-align: middle;
        }

            .comment-table tbody tr td.title-column {
                width: 50%;
            }

            .comment-table tbody tr td.image-column {
                width: 40%;
            }

            .comment-table tbody tr td.comments-column {
                width: 15%;
            }

            .comment-table tbody tr td.rates-column {
                width: 15%;
            }

            .comment-table tbody tr td.action-column {
                width: 15%;
            }

    .truncate-content {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        white-space: normal;
    }

    /* Xóa CSS custom của nút View Comment */
    /*
            .comment-btn {
                background-color: #fff !important;
                color: #000 !important;
                border: 2px solid #FEDA15 !important;
                padding: 3px 6px;
                font-size: 0.75rem;
            }
            .comment-btn:hover {
                background-color: #FAF0E6 !important;
                color: #000000 !important;
            }
            */

    .table-wrapper {
        height: 900px;
        overflow: hidden;
    }

    .comment-table {
        width: 100%;
        table-layout: fixed;
    }

    /* Căn giữa pagination */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px 0;
    }

        .pagination a.page-btn,
        .pagination span.page-btn {
            display: inline-block;
            background-color: #fff;
            color: #000;
            border: 2px solid #FEDA15;
            padding: 8px 12px;
            margin: 0 4px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: background 0.3s, color 0.3s;
        }

            .pagination a.page-btn:hover {
                background-color: #FAF0E6;
                color: #000;
            }

            .pagination span.page-btn.active {
                background-color: transparent;
                color: #000;
                font-weight: bold;
            }
</style>

<div class="comment-container">
    <div class="comment-header">
        <h2>Comments List</h2>
        <p></p>
    </div>
    <div class="comment-body">
        <!-- Bọc bảng trong wrapper có chiều cao cố định -->
        <div class="table-wrapper">
            <table class="table comment-table">
                <thead class="table-dark">
                    <tr>
                        <th class="title-column">Title</th>
                        <th class="image-column">Image</th>
                        <th class="comments-column">Comments</th>
                        <th class="rates-column">Rates</th>
                        <th class="action-column">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center">No comment found!</td>
                        </tr>
                    }
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td class="title-column">@blog.Title</td>
                            <td class="image-column">
                                <img src="@blog.ImageUrl" alt="@blog.Title" class="img-thumbnail" style="max-width: 130px; max-height:90px;" />
                            </td>
                            <td class="comments-column">@blog.Comments?.Count()</td>
                            <td class="rates-column">@blog.Rates?.Count()</td>
                            <td class="action-column">
                                <!-- Sử dụng button primary mặc định của Bootstrap -->
                                <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id" class="btn btn-primary btn-sm">
                                    View Comment
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="pagination"></div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var tableBody = document.querySelector(".comment-table tbody");
        var rows = tableBody.querySelectorAll("tr");
        var rowsPerPage = 10;
        var currentPage = 1;
        var totalPages = Math.ceil(rows.length / rowsPerPage);
        var paginationContainer = document.querySelector(".pagination");

        function showPage(page) {
            currentPage = page;
            rows.forEach(function (row, index) {
                row.style.display = "none";
                if (index >= (page - 1) * rowsPerPage && index < page * rowsPerPage) {
                    row.style.display = "";
                }
            });
            updatePagination();
        }

        function updatePagination() {
            paginationContainer.innerHTML = "";
            var prevBtn = document.createElement("a");
            prevBtn.href = "#";
            prevBtn.className = "page-btn";
            prevBtn.textContent = "Previous";
            prevBtn.addEventListener("click", function (e) {
                e.preventDefault();
                if (currentPage > 1) {
                    showPage(currentPage - 1);
                }
            });
            paginationContainer.appendChild(prevBtn);

            for (var i = 1; i <= totalPages; i++) {
                if (i === currentPage) {
                    var span = document.createElement("span");
                    span.className = "page-btn active";
                    span.textContent = i;
                    paginationContainer.appendChild(span);
                } else {
                    var pageLink = document.createElement("a");
                    pageLink.href = "#";
                    pageLink.className = "page-btn";
                    pageLink.textContent = i;
                    pageLink.addEventListener("click", (function (page) {
                        return function (e) {
                            e.preventDefault();
                            showPage(page);
                        };
                    })(i));
                    paginationContainer.appendChild(pageLink);
                }
            }

            var nextBtn = document.createElement("a");
            nextBtn.href = "#";
            nextBtn.className = "page-btn";
            nextBtn.textContent = "Next";
            nextBtn.addEventListener("click", function (e) {
                e.preventDefault();
                if (currentPage < totalPages) {
                    showPage(currentPage + 1);
                }
            });
            paginationContainer.appendChild(nextBtn);
        }

        if (rows.length > 0) {
            showPage(1);
        }
    });
</script>
