<style>
    .aboutus-container {
        background-color: #FEDA15;
        position: relative;
        width: 100%;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        overflow: hidden;
        z-index: 2;
    }

    .confetti-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
        z-index: -1;
    }

    .team-title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 40px;
        color: #333;
        position: relative;
        text-transform: none !important
    }

        .team-title::after {
            content: '';
            display: block;
            width: 200px;
            height: 4px;
            background-color: #555;
            margin: 10px auto 0;
            border-radius: 2px;
        }

    .card-person {
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        margin: 10px auto 0;
        display: flex;
        align-items: center;
        gap: 15px;
        height: 250px;
        padding: 10px;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        cursor: pointer;
    }

        .card-person:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 16px 40px rgba(0,0,0,0.15);
        }

    .card-img-container {
        flex: 0 0 auto;
        height: 100%;
        overflow: hidden;
        border-radius: 15px;
        width: 180px;
    }

        .card-img-container img {
            height: 100%;
            width: 100%;
            object-fit:cover;
            border-radius: 15px;
            transition: transform 0.5s ease;
        }

    .card-person:hover .card-img-container img {
        transform: scale(1.15);
    }

    .profile-info {
        flex: 1;
    }

        .profile-info h4 {
            margin: 0 10px;
            font-size: 1.5rem;
            font-weight: 700;
            color: #2c3e50;
            transition: color 0.3s;
        }

    .card-person h4::after {
        content: '';
        display: block;
        width: 100px;
        height: 4px;
        margin-top: 10px;
        background-color: currentColor;
        transition: width 0.3s, background-color 0.3s;
    }

    .card-person.hovered h4 {
        transition: color 0.3s;
    }

        .card-person.hovered h4::after {
            width: 160px;
        }

    .member-description p {
        margin: 10px;
        font-size: 1rem;
        color: #555;
        line-height: 1.5;
        text-align: justify;
    }

</style>


