@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/main.css" />

<style>
    .aboutus-container {
        background-color: #FEDA15;
        position: relative;
        width: 100%;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        overflow: hidden;
        z-index: 2;
    }

    .confetti-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
        z-index: -1;
    }

    .card-person {
        background-color: #fff;
        border: 2px solid #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        margin: 20px auto 0;
        display: flex;
        align-items: center;
        gap: 30px;
        height: 300px;
        padding: 15px;
    }

    .card-img-container {
        flex: 0 0 auto;
        height: 100%;
    }

        .card-img-container img {
            height: 100%;
            width: auto;
            border-radius: 5px;
        }

    .profile-info {
        flex: 1;
    }

        .profile-info h4 {
            margin: 0 0 10px;
            font-size: 1.25rem;
        }

        .profile-info p {
            margin: 0;
            font-size: 1rem;
        }

    .team-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

</style>
