@model IEnumerable<IWant.Web.Models.BlogViewModel>
@{
    ViewData["Title"] = "Manage Feedback";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Header giống design Manage Accounts */
    .comment-header {
        text-align: center;
    }

        .comment-header h2 {
            font-size: 3rem;
            font-weight: bold;
        }

        .comment-header p {
            font-size: 1rem;
            color: #364d59;
            position: relative;
        }

            .comment-header p::after {
                content: "";
                display: block;
                width: 50%;
                height: 1px;
                background-color: #364d59;
                margin: 10px auto;
            }

    .comment-table thead th {
        background-color: #e9ecef !important;
        color: #6c757d !important;
        border-bottom: 4px solid #FEDA15;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .comment-table tbody tr {
        height: 90px;
    }

        .comment-table tbody tr td {
            height: 90px;
            vertical-align: middle;
        }

    .truncate-content {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        white-space: normal;
    }

    /* Xóa CSS custom của nút View Comment */
    /*
                .comment-btn {
                    background-color: #fff !important;
                    color: #000 !important;
                    border: 2px solid #FEDA15 !important;
                    padding: 3px 6px;
                    font-size: 0.75rem;
                }
                .comment-btn:hover {
                    background-color: #FAF0E6 !important;
                    color: #000000 !important;
                }
                */

    .table-wrapper {
        height: 620px;
        overflow: hidden;
    }

    .comment-table {
        width: 100%;
        table-layout: fixed;
    }

    /* Căn giữa pagination */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px 0;
    }

        .pagination a.page-btn,
        .pagination span.page-btn {
            display: inline-block;
            background-color: #fff;
            color: #000;
            border: 2px solid #FEDA15;
            padding: 8px 12px;
            margin: 0 4px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: background 0.3s, color 0.3s;
        }

            .pagination a.page-btn:hover {
                background-color: #FAF0E6;
                color: #000;
            }

            .pagination span.page-btn.active {
                background-color: transparent;
                color: #000;
                font-weight: bold;
            }


    #pagination {
        margin-top: 10px;
        text-align: center;
    }

        #pagination button {
            padding: 5px 10px;
            margin: 2px;
            border: 1px solid #ccc;
            background-color: white;
            cursor: pointer;
        }

            #pagination button.active {
                background-color: #FEDA15;
                color: white;
            }
</style>

<div class="comment-container">
    <div class="comment-header">
        <h2>LIST OF FEEDBACK</h2>
        <p></p>
    </div>
    <div class="comment-body">
        <!-- Bọc bảng trong wrapper có chiều cao cố định -->
        <div class="table-wrapper">
            <table class="table comment-table">
                <thead class="table-dark">
                    <tr>
                        <th style="width:40%">Title</th>
                        <th style="width:15%">Image</th>
                        <th style="width:15%">Comments</th>
                        <th style="width:15%">Rates</th>
                        <th style="width:15%">Action</th>
                    </tr>
                </thead>
                <tbody id="blogTableBody">
                    @if (Model.Count() == 0)
                    {
                    }
                    else
                    {
                        foreach (var blog in Model)
                        {
                            <tr style="height:110px">
                                <td>@blog.Title</td>
                                <td>
                                    <img src="@blog.ImageUrl" alt="Blog Image" class="img-thumbnail" style="max-width: 130px; max-height:90px;" />
                                </td>
                                <td>@blog.Feedbacks?.Count()</td>
                                <td>@blog.Rates?.Count()</td>
                                <td>
                                    <!-- Sử dụng button primary mặc định của Bootstrap -->
                                    <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id" class="btn btn-primary btn-sm" asp-fragment="Comments">
                                        View feedback
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="pagination" id="pagination"></div>
    </div>
</div>

<script>
     document.addEventListener("DOMContentLoaded", function () {
        const rowsPerPage = 5;
        const tableBody = document.getElementById("blogTableBody");
        const paginationContainer = document.getElementById("pagination");
        const rows = Array.from(tableBody.getElementsByTagName("tr")); 

        let currentPage = 1;
        let totalPages = Math.ceil(rows.length / rowsPerPage);

        function showPage(page) {
            let start = (page - 1) * rowsPerPage;
            let end = start + rowsPerPage;

            rows.forEach((row, index) => {
                row.style.display = index >= start && index < end ? "" : "none";
            });

            updatePagination();
        }

        function updatePagination() {
            paginationContainer.innerHTML = "";

            for (let i = 1; i <= totalPages; i++) {
                let btn = document.createElement("button");
                btn.innerText = i;
                btn.className = "page-btn " + (i === currentPage ? "active" : "");
                btn.addEventListener("click", function () {
                    currentPage = i;
                    showPage(currentPage);
                });
                paginationContainer.appendChild(btn);
            }
        }
        showPage(currentPage);
    });
</script>
